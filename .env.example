# ===========================================
# Bifrost Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database (Required)
# ===========================================
# PostgreSQL connection string
# For Neon.tech: postgresql://user:password@host.neon.tech/dbname?sslmode=require
DATABASE_URL="postgresql://postgres:password@localhost:5432/bifrost"

# ===========================================
# Security (Required in production)
# ===========================================
# JWT secret key (min 32 characters)
# Generate with: openssl rand -hex 32
JWT_SECRET="your-super-secret-key-change-in-production"

# Webhook signing secret
WEBHOOK_SECRET="your-webhook-secret-change-in-production"

# ===========================================
# Cloudinary (Required for image uploads)
# ===========================================
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
NODE_ENV=development

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Log level: debug, info, warn, error
LOG_LEVEL=info
